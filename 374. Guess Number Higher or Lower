
class Solution {
public:
    int guessNumber(int n) {
        
        int start = 0, end = n;
        int mid;
        
        while(start <= end)
        {
            mid = start + (end - start)/2;
            
            if(guess(mid) == 0)
                return mid;
            
            if(guess(mid) == -1)
                end = mid - 1;
            else
                start = mid + 1;
        }
        return mid;
    }
};
